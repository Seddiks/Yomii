<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_marginBottom="12dp">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:src="@drawable/bgmoi" />


     <TextView
         android:id="@+id/profile_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/profile_image"
         android:layout_marginTop="8dp"
         android:layout_marginBottom="8dp"
         android:textColor="#000"
         android:textStyle="bold"
         android:text="Seddik"/>
     <TextView
         android:id="@+id/date"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/profile_image"
         android:layout_below="@+id/profile_name"
         android:textSize="12sp"
         android:text="24 Jan 2017"/>

    <ImageView
        android:id="@+id/more_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:src="@drawable/ic_more_action"
        />


    <Button
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/more_image"
        android:background="@drawable/ripple_blue_500"
        android:layout_margin="12dp"
        android:textColor="@color/blue_500"
        android:text="Follow"
        android:textSize="10sp"
        android:textStyle="bold"
        android:padding="2dp"
        />


    <ImageView
        android:id="@+id/photosPublished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@+id/profile_image"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/photosPublished"
        >
    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/reaction"
        android:adjustViewBounds="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:sparkbutton_iconSize="24dp"
        app:sparkbutton_activeImage="@drawable/ic_like"
        app:sparkbutton_inActiveImage="@drawable/ic_unlike"
        android:layout_margin="12dp"
        />
    <ImageView
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/reaction"
        />
    <TextView
        android:id="@+id/numberReactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reaction"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="23 Likes"
        />
        <TextView
            android:id="@+id/numberComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/numberReactions"
            android:layout_below="@+id/reaction"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="543 Comment"
            />

    <ImageView
        android:id="@+id/eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_eye"
        />
    <TextView
        android:id="@+id/numberVue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/eye"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey_500"
        android:textSize="10sp"
        android:text="23"
        />
    </RelativeLayout>

</RelativeLayout>
