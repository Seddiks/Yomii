<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:src="@drawable/bgmoi" />


    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/profile_image"
        android:text="Seddik"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_toRightOf="@+id/profile_image"
        android:text="24 Jan 2017"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/more_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:src="@drawable/ic_more_action" />


    <Button
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="12dp"
        android:layout_toLeftOf="@+id/more_image"
        android:background="@drawable/ripple_blue_500"
        android:padding="2dp"
        android:text="Follow"
        android:textColor="@color/blue_500"
        android:textSize="10sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image">

        <ImageView
            android:id="@+id/photosPublished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <ProgressBar
            android:id="@+id/photo_progress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_photo"
        android:orientation="horizontal">

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/reaction"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            app:sparkbutton_activeImage="@drawable/ic_like"
            app:sparkbutton_iconSize="24dp"
            app:sparkbutton_inActiveImage="@drawable/ic_unlike" />

        <ImageView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/reaction"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/numberReactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reaction"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="23 Likes"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/numberComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reaction"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@+id/numberReactions"
            android:text="543 Comment"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_eye" />

        <TextView
            android:id="@+id/numberVue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/eye"
            android:text="23"
            android:textColor="@color/grey_500"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>
