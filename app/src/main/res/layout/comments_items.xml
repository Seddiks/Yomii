<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_profil"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_margin="@dimen/standard_12" />

    <TextView
        android:id="@+id/name_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_12"
        android:layout_toRightOf="@+id/photo_profil"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_profil"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/photo_profil"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_12sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_marginRight="@dimen/standard_18"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/photo_profil"
        android:text="15 Juin 2018"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/standard_12sp" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/date"
        android:text="Delete"
        android:textSize="@dimen/standard_12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/publication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/photo_profil"
        android:text="Publication"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/standard_10sp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/standard_10"
        android:layout_height="@dimen/standard_10"
        android:layout_below="@+id/comment"
        android:layout_marginRight="@dimen/standard_18"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/publication"
        android:indeterminateTint="@color/grey_500"
        android:visibility="gone" />


</RelativeLayout>
