<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll"
    android:background="@drawable/ripple_rv"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:layout_margin="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_guatimala"/>
            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/photo"
                android:src="@drawable/ic_place_deep_purple_200_24dp"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_location"
                android:text="Spain, Madrid"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#B39DDB"/>
            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_action"/>
            <TextView
                android:id="@+id/title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/photo"
                android:layout_below="@+id/img_location"
                android:text="My first Guide in Madrid city"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/photo"
                android:layout_below="@+id/title"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="12sp"
                android:text= "These travel guides aim to give you the best and most up to date information on the major travel destinations around the world. Here you will find budget tips, money saving advice, tips on places to stay,"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>